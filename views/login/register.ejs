        <input type="checkbox" id="checkbox" name="terms" required>
        <label for="terms"> Accept our <b>terms and conditions*</b></label><br>

        <input type="submit" value="register">
    </form>
    <a href="/login">Login</a>
    <div id="footer_container"></div>


</body>
