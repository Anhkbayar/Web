<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= file.title%>
    </title>
    <link rel="stylesheet" href="/stylesheets/itemfull.css">
</head>

<body>
    <div class="header">
        <%- include("partials/header") %>
    </div>
    <div class="container-content">
        <div class="images">
            <% file.coverImageNames.forEach(function(coverImageName) { %>
                <div class="image">
                    <img src="../uploads/ModelCovers/<%= coverImageName %>" alt="<%= file.title %>" class="file-image">
                </div>
                <% }); %>
        </div>
        <div class="infos">
            <div class="title">
                <h3>
                    <%= file.title %>
                </h3>
                <div class="stats">
                    <div class="downcount">
                        <img src="/Icons/Downloads.svg" alt="Downloads" class="downloads">
                        <p>100+</p>
                    </div>
                    <div class="reviewcount">
                        <img src="/Icons/RatingStar.svg" alt="Rating" class="ratings">
                        <p>5</p>
                    </div>
                </div>
            </div>
            <hr>
            <div class="info-table">
                <table>
                    <tr>
                        <td>Printing time</td>
                        <th>
                            <%= file.printTime %>
                        </th>
                        <td>Glue</td>
                        <th>
                            <%= file.glue? "Yes" :"No" %>
                        </th>
                    </tr>
                    <tr>
                        <td>Bed Size</td>
                        <th>220x220mm</th>
                        <td>Weight</td>
                        <th>
                            <%= file.weight %>
                        </th>
                    </tr>
                    <tr>
                        <td>Material</td>
                        <th>
                            <%= file.material %>
                        </th>
                        <td>Pieces</td>
                        <th>
                            <%= file.pieces %>
                        </th>
                    </tr>
                </table>
                <p class="filelink">click <a href="<%= file.link %>">here</a> for instruction manual</p>
            </div>
            <hr>
            <div class="buy">
                <p class="price">
                    <%= file.price? "$" +file.price : "free" %>
                </p>
                <button class="addtocart" onclick="addtocart('<%= file.id %>')">Add to cart</button>
            </div>
        </div>
    </div>
    <div class="description">
        <%= file.description %>
    </div>
    <div class="xray-cont">
        <div class="xray">
            <% file.chassisImageNames.forEach(function(chassisImageName) { %>
                <div class="image">
                    <img src="../uploads/ChassisImages/<%= chassisImageName %>" alt="<%= file.title %>"
                        class="file-image">
                </div>
                <% }); %>
        </div>
    </div>
    <div class="cars-list">
        <h3>Related Products</h3>
        <ul>
            <% for (let i=0; i < allfiles.length; i++) { %>
                <%- include('partials/fileshort', { file: allfiles[i] }) %>
                    <% if(i==4){ break} %>
                        <% } %>
        </ul>
    </div>
    <div class="footer">
        <%- include('partials/footer') %>
    </div>
</body>
<script>
    async function addtocart(fileId) {
        const response = await fetch('/addCart', {
            method: 'POST',
            body: JSON.stringify({ productId: fileId }),
        });
        if (response.ok) {
            console.log("Item added to cart");
        } else {
            console.error("Failed to add item to cart");
        }
    }
    
</script>
</html>